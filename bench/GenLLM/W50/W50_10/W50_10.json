{
  "nodes": [
    {
      "id": "1",
      "name": "Schedule",
      "type": "n8n-nodes-base.schedule",
      "parameters": {
        "cronExpression": "0 * * * *"
      }
    },
    {
      "id": "2",
      "name": "HTTP Request",
      "type": "n8n-nodes-base.httpRequest",
      "parameters": {
        "url": "https://api.coindesk.com/v1/bpi/currentprice/BTC.json"
      }
    },
    {
      "id": "3",
      "name": "IF Condition",
      "type": "n8n-nodes-base.if",
      "parameters": {
        "conditions": {
          "number": [
            {
              "value1": "={{JSON.parse($json[\"bpi\"][\"USD\"][\"rate_float\"])}}",
              "operation": "<",
              "value2": 55000
            }
          ]
        }
      }
    },
    {
      "id": "4",
      "name": "Slack Alert",
      "type": "n8n-nodes-base.slack",
      "parameters": {
        "text": "BTC price is below $55k!"
      }
    }
  ],
  "connections": {
    "Schedule": {
      "main": [
        [
          {
            "node": "HTTP Request",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "HTTP Request": {
      "main": [
        [
          {
            "node": "IF Condition",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "IF Condition": {
      "main": [
        [
          {
            "node": "Slack Alert",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}