{
  "nodes": [
    {
      "id": "1",
      "name": "Check Battery Level",
      "type": "n8n-nodes-base.httpRequest",
      "parameters": {
        "url": "https://api.iotdevice.com/battery"
      }
    },
    {
      "id": "2",
      "name": "Send Slack Notification",
      "type": "n8n-nodes-base.slack",
      "parameters": {
        "text": "Warning: IoT battery level is below 20%."
      }
    },
    {
      "id": "3",
      "name": "Schedule Check",
      "type": "n8n-nodes-base.schedule",
      "parameters": {
        "cronExpression": "0 * * * *"
      }
    }
  ],
  "connections": {
    "Schedule Check": {
      "main": [
        [
          {
            "node": "Check Battery Level",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Check Battery Level": {
      "main": [
        [
          {
            "node": "Send Slack Notification",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}