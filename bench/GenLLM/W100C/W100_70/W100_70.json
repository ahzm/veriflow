{
  "nodes": [
    {
      "id": "1",
      "name": "Schedule Request",
      "type": "n8n-nodes-base.schedule",
      "parameters": {
        "cronExpression": "0 0 * * *"
      }
    },
    {
      "id": "2",
      "name": "HTTP Request to Criminal Record API",
      "type": "n8n-nodes-base.httpRequest",
      "parameters": {
        "url": "https://api.criminalrecords.example.com/request"
      }
    },
    {
      "id": "3",
      "name": "Send Email Notification",
      "type": "n8n-nodes-base.emailSend",
      "parameters": {
        "to": "admin@example.com",
        "subject": "Criminal Record Request Sent",
        "text": "A request for a cross-border criminal record has been sent."
      }
    },
    {
      "id": "4",
      "name": "Slack Notification",
      "type": "n8n-nodes-base.slack",
      "parameters": {
        "text": "A new criminal record exchange request has been initiated."
      }
    }
  ],
  "connections": {
    "Schedule Request": {
      "main": [
        [
          {
            "node": "HTTP Request to Criminal Record API",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "HTTP Request to Criminal Record API": {
      "main": [
        [
          {
            "node": "Send Email Notification",
            "type": "main",
            "index": 0
          }
        ],
        [
          {
            "node": "Slack Notification",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}