{
  "nodes": [
    {
      "id": "1",
      "name": "Webhook",
      "type": "n8n-nodes-base.webhook",
      "parameters": {
        "httpMethod": "POST",
        "path": "trade-lifecycle"
      }
    },
    {
      "id": "2",
      "name": "Confirm Trade",
      "type": "n8n-nodes-base.httpRequest",
      "parameters": {
        "url": "https://api.example.com/confirm-trade",
        "method": "POST",
        "jsonParameters": true,
        "options": {},
        "body": {
          "tradeId": "={{$json[\"tradeId\"]}}",
          "status": "confirmed"
        }
      }
    },
    {
      "id": "3",
      "name": "Send Confirmation Email",
      "type": "n8n-nodes-base.emailSend",
      "parameters": {
        "to": "trader@example.com",
        "subject": "Trade Confirmation",
        "text": "Your trade has been confirmed."
      }
    },
    {
      "id": "4",
      "name": "Manage Collateral",
      "type": "n8n-nodes-base.httpRequest",
      "parameters": {
        "url": "https://api.example.com/manage-collateral",
        "method": "POST",
        "jsonParameters": true,
        "options": {},
        "body": {
          "tradeId": "={{$json[\"tradeId\"]}}",
          "action": "add"
        }
      }
    },
    {
      "id": "5",
      "name": "Log Lifecycle Event",
      "type": "n8n-nodes-base.slack",
      "parameters": {
        "text": "Lifecycle event for trade ID: {{$json[\"tradeId\"]}} has been logged."
      }
    }
  ],
  "connections": {
    "Webhook": {
      "main": [
        [
          {
            "node": "Confirm Trade",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Confirm Trade": {
      "main": [
        [
          {
            "node": "Send Confirmation Email",
            "type": "main",
            "index": 0
          }
        ],
        [
          {
            "node": "Manage Collateral",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Manage Collateral": {
      "main": [
        [
          {
            "node": "Log Lifecycle Event",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}